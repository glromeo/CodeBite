{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src"]
}
